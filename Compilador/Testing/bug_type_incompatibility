
/% ------------- Incompatibilidad de tipos  ------------------- %/

    a = 3.;                                                     /% Se asigna un Float a una variable LONGINT %/
    x = 5_l;                                                    /% Se asigna un LONGINT a una variable Float %/
    w =  3_l +  5.0f+3;                                         /% Suma de distintos tipos %/
    c = 3. * 3_l;                                               /% Multiplicacion de distintos tipos %/
    b = variable_no_definida;                                   /% Asignacion a una variable indefinida %/
    LONGINT d;                                                  /% Redeclaracion de variable d %/

    w = 4.5 + 3.3 + 4. / 3_l;                                   /% Multiples operaciones dentro de una expresion  %/

    procedure_0(x);                                             /% Procedimiento no declarado %/

    PROC aa (FLOAT parametro1) NA = 3_l , SHADOWING = FALSE      /% Redeclaracion de procedimiento %/
    {
        FLOAT f, k;
        LONGINT d;                                              /% No es error, se permiten redeclaraciones en distinto ambito %/
        PROC procedure_1_1 (FLOAT parametro2) NA = 3_l , SHADOWING = TRUE
        {
            f = a + 5.;
            FLOAT k;                                            /% SHADOWING = TRUE no admite declarar una variable con el mismo nombre en los Ã¡mbitos anidados%/
        };
        procedure_1_1(k);
    };

    z = f;                                                               /% Variable 'f' no esta al alcance %/
    procedure_1_1(z);                                                   /% Procedimiento no se encuentra al alcance %/

    PROC procedure_2 (FLOAT p) NA = 3_l , SHADOWING = FALSE              /% Redeclaracion de procedimiento  %/
    {
        c = 3. * 3_l;
    };