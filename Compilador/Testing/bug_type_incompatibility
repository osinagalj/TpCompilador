    a = 3.;                                                     /% Se asigna un Float a una variable LONGINT %/
    x = 5_l;                                                    /% Se asigna un LONGINT a una variable Float %/
    w =  3_l +  5.0f+3;                                         /% Suma de distintos tipos %/
    c = 3. * 3_l;                                               /% Multiplicacion de distintos tipos %/
    b = variable_no_definida;                                   /% Asignacion a una variable indefinida %/
    LONGINT d;                                                  /% Redeclaracion de variable d %/

    w = 4.5 + 3.3 + 4. / 3_l;                                   /% Multiples operaciones dentro de una expresion  %/



